{
  "id": null,
  "title": "SIEM - Security Monitoring Dashboard",
  "tags": ["siem", "security", "monitoring"],
  "timezone": "browser",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "style": "dark",
  "schemaVersion": 30,
  "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "SSH Authentication Events",
        "type": "stat",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "count by (level) (rate({job=\"node-logs\"} |~ \"ssh|SSH|sshd\" [5m]))",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 20
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Failed SSH Attempts",
        "type": "table",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "{job=\"node-logs\"} |~ \"Failed password|authentication failure|Invalid user\" | line_format \"{{.timestamp}} - {{.__line__}}\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 18,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Kubernetes API Audit Events",
        "type": "logs",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "{job=\"kubernetes-audit\"} | json | line_format \"{{.stageTimestamp}} - {{.verb}} {{.objectRef_resource}} by {{if .user_username}}{{.user_username}}{{else}}{{.user}}{{end}} ({{.responseStatus_code}})\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Webhook Events",
        "type": "logs",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "{job=\"webhook-receiver\"} | line_format \"{{.__timestamp__}} - {{.__line__}}\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Security Events Timeline",
        "type": "timeseries",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "rate({job=~\"node-logs|kubernetes-audit|webhook-receiver\"} [5m])",
            "refId": "A",
            "legendFormat": "{{job}}",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Critical Security Events",
        "type": "logs",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "{job=~\".*\"} |~ \"(?i)(Failed password|authentication failure|Invalid user|403|denied|unauthorized|forbidden)\" != \"TemplateFormatErr\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "User Activity",
        "type": "table",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "targets": [
          {
            "expr": "{job=\"kubernetes-audit\"} | json | line_format \"{{if .user_username}}{{.user_username}}{{else}}system:unknown{{end}} - {{.verb}} - {{.objectRef_resource}}\" | pattern \"<username> - <action> - <resource>\" | label_format username=\"{{.username}}\", action=\"{{.action}}\", resource=\"{{.resource}}\"",
            "refId": "A",
            "datasource": {
              "type": "loki",
              "uid": "loki"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "refresh": "30s"
}
