{
  "id": null,
  "title": "SIEM - Enhanced Security Monitoring Dashboard",
  "tags": ["siem", "security", "monitoring", "enhanced"],
  "timezone": "browser",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "style": "dark",
  "schemaVersion": 30,
  "version": 2,
  "panels": [
    {
      "id": 1,
      "title": "Security Events Overview",
      "type": "stat",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (job) (count_over_time({job=~\".+\"} |~ \"(?i)(failed|403|denied|unauthorized|forbidden|invalid)\" [5m]))",
          "refId": "A",
          "legendFormat": "{{job}}",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "red",
                "value": 20
              }
            ]
          },
          "unit": "short"
        }
      },
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "SSH Authentication Failures",
      "type": "table",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "{job=\"node-logs\"} |~ \"(?i)(Failed password|authentication failure|Invalid user)\" | __error__=\"\" | line_format \"{{.__timestamp__}} | {{.__line__}}\"",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "Line": "Event Details"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "list",
            "filterable": true
          }
        }
      },
      "gridPos": {
        "h": 6,
        "w": 16,
        "x": 8,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Kubernetes API Unauthorized Access",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "{job=\"kubernetes-audit\"} |~ \"403|unauthorized|forbidden\" | json | __error__=\"\" | line_format \"{{.stageTimestamp}} | {{if .user_username}}{{.user_username}}{{else}}system:unknown{{end}} | {{.verb}} | {{.objectRef_resource}} | HTTP {{.responseStatus_code}} | {{.userAgent}}\"",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      }
    },
    {
      "id": 4,
      "title": "Webhook Security Events",
      "type": "logs",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "{job=\"webhook-receiver\"} | line_format \"{{.__timestamp__}} | {{if .source_ip}}From: {{.source_ip}}{{else}}{{.__line__}}{{end}}\"",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": false,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
