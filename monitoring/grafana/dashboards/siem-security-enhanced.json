      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      }
    },
    {
      "id": 5,
      "title": "Security Events Timeline",
      "type": "timeseries",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (job) (rate({job=~\"node-logs|kubernetes-audit|webhook-receiver\"} |~ \"(?i)(failed|403|denied|unauthorized|forbidden|invalid|error)\" [1m]))",
          "refId": "A",
          "legendFormat": "{{job}} - Security Events",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "axisLabel": "",
