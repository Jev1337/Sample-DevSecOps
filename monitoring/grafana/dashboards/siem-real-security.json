  "panels": [
    {
      "id": 1,
      "title": "üîí Security Events Overview",
      "type": "stat",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (job) (rate({job=~\"system-auth|system-audit|webhook-receiver|package-install|siem-monitor|loki.source.kubernetes.pods|command-execution\"} [5m]))",
          "refId": "A",
          "legendFormat": "{{job}}",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "red",
                "value": 20
              }
            ]
          },
          "unit": "reqps",
          "displayName": "${__field.labels.job}"
        }
      },
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal",
        "textMode": "value_and_name",
        "colorMode": "background",
        "noValue": "No Events"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "üö® Security Alert Summary",
      "type": "stat",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum(count_over_time({job=~\"system-auth|system-audit\"} |~ \"(?i)(failed|invalid|denied|unauthorized|forbidden|error)\" [$__range]))",
          "refId": "A",
          "legendFormat": "Failed Auth",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        },
        {
          "expr": "sum(count_over_time({job=\"command-execution\"} |~ \"(?i)(rm -rf|chmod 777|sudo|passwd|useradd|userdel)\" [$__range]))",
          "refId": "B",
          "legendFormat": "Dangerous Commands",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        },
        {
          "expr": "sum(count_over_time({job=\"loki.source.kubernetes.pods\"} |~ \"(?i)(error|failed|crash|died)\" [$__range]))",
