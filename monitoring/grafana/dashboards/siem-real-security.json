    },
    {
      "id": 6,
      "title": "User Activity Summary",
      "type": "table",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (sudo_user, event_type) (count_over_time({job=\"system-auth\", event_type=~\"sudo_usage|successful_login\"} [1h]))",
          "refId": "A",
          "datasource": {
            "type": "loki",
            "uid": "loki"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "displayMode": "list",
            "filterable": true
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "red",
                "value": 50
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          }
        }
      },
      "options": {
        "showHeader": true
      },
      "pluginVersion": "9.0.0",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    },
    {
      "id": 7,
