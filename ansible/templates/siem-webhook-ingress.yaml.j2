apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: siem-webhook-ingress
  namespace: monitoring
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  ingressClassName: public
  rules:
  - host: webhook.{{ external_ip }}.nip.io
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: siem-webhook
            port:
              number: 80
